<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
    <%- include('partials/links.ejs') %>
</head>



<body>
    <nav class="navbar sticky-top navbar-dark bg-dark py-3">
        <span class="navbar-brand h1 mx-auto">ASiSA BANK</span>
    </nav>
    <div class="bg-light container signupbg mt-5 ">
        <h2 class="p-2">Edit the details you wanted to !</h2>

        <form action="/update/<%= user._id %>?_method=PATCH " method="POST" class=" needs-validation signupform p-5"
            novalidate>
            <div class="row mb-3">
                <div class="col">
                    <label for="fname" class="form-label">Full Name</label>
                    <input type="text" name="fullname" class="form-control" id="fname" value="<%= user.fullname  %>"
                        required>
                    <div class="invalid-feedback">
                        Please enter a valid input.
                    </div>
                </div>
                <div class="col">
                    <label for="lname" class="form-label">User Id</label>
                    <input type="text" name="userid" class="form-control" id="lname" value="<%= user.userid  %>"
                        required>
                    <div class="invalid-feedback">
                        Please enter a valid input.
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="mail" class="form-label">Email</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">@</span>
                        <input type="email" name="email" class="form-control" id="mail"
                            aria-describedby="inputGroupPrepend" value="<%= user.email  %>" required>
                        <div class="invalid-feedback">
                            Please enter a valid input.
                        </div>
                    </div>
                </div>
                <div class="col">
                    <label for="pass" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="pass" value="<%= user.password  %>"
                        required>
                    <div class="invalid-feedback">
                        Please enter a valid input.
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col ">
                    <label for="pancard" class="form-label">Pan Card Number</label>
                    <input type="text" name="panNumber" class="form-control" id="pancard" value="<%= user.panNumber  %>"
                        required>
                    <div class="invalid-feedback">
                        Please enter a valid input.
                    </div>
                </div>
                <div class="col ">
                    <label for="adhaar" class="form-label">Adhaar Card Number</label>
                    <input type="number" name="adhaarNumber" class="form-control" id="adhaar"
                        value="<%= user.adhaarNumber  %>" required>
                    <div class="invalid-feedback">
                        Please enter a valid input.
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col ">
                    <label for="validationCustom04" class="form-label">Branch Name</label>
                    <input type="text" name="city" class="form-control" id="validationCustom06"
                        value="<%= user.branchName  %>" required>
                    <div class="invalid-feedback">
                        Please enter a valid input.
                    </div>
                </div>
                <div class="col">
                    <label for="validationCustom05" class="form-label">State</label>
                    <select class="form-select" name="state" id="validationCustom07" value="<%= user.state  %>"
                        required>
                        <option disabled>Choose...</option>
                        <option value="Tamil Nadu">Tamil Nadu</option>
                        <option value="Andhra Pradhash">Andhra Pradhash</option>
                        <option value="Kerala">Kerala</option>
                    </select>
                    <div class="invalid-feedback">
                        Please Select a option.
                    </div>
                </div>
            </div>
            <!-- <div class="row mb-2">
                    <div class="col-6 mt-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="invalidCheck" required>
                            <label class="form-check-label" for="invalidCheck">
                                Agree to terms and conditions
                            </label>
                            <div class="invalid-feedback">
                                You must agree before submitting.
                            </div>
                        </div>
                    </div>
                </div> -->
            <div class="d-flex justify-content-evenly">
                <div class="row ">
                    <div class="col ">
                        <button class="btn btn-primary" type="submit">Update_Account</button>
                    </div>
                    <div class="col">
                        <a href="/home/<%= user._id %>" class="btn btn-warning">cancel</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</body>



<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
    integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
    crossorigin="anonymous"></script>
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>

</html>