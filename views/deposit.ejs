<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/links') %>
</head>

<body>
    <nav class="navbar sticky-top navbar-dark bg-dark">
        <span class="navbar-brand h1 offset-3">ASiSA BANK</span>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-8 mt-5 offset-2">
                <div class="card text-center">
                    <div class="card-header">
                        Smart ATM Deposit
                    </div>
                    <div class="card-body">
                        <h5 class="card-title mb-5">Deposit Here</h5>
                        <form action="/deposit/<%= user._id %>" method="POST" class="needs-validation" novalidate>
                            <div class="form-floating mb-4">
                                <input type="email" class="form-control" id="email" placeholder="name@example.com"
                                    value=" <%= user.email %>" disabled>
                                <label for="email">Email address</label>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="text" class="form-control" id="_id" placeholder="name@example.com"
                                    value="<%= user._id %>" disabled>
                                <label for="_id">Account Number</label>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="number" class="form-control " name="bankbalance" id="bankbalance"
                                    placeholder="Deposit Amount" min="0" required>
                                <label for="bankbalance">Deposit Amount</label>
                                <!-- <div class="invalid-feedback">
                                    <span>Entered money cannot be processed</span>
                                </div> -->
                            </div>
                            <button class="btn btn-success mb-3">
                                DEPOSIT
                            </button>
                        </form>
                        <a href="/home/<%= user._id %>" class="btn btn-warning">cancel</a>
                    </div>
                    <div class="card-footer text-muted">
                        &copy; ASiSA Bank since 2021
                    </div>
                </div>
            </div>
        </div>


    </div>



</body>
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>

</html>